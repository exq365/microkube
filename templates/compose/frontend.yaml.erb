version: '3.6'

services:
  tower:
    image: "<%= @config['images']['tower'] %>"
    volumes:
      - ../config/frontend/tower.js:/home/app/env.js
    labels:
      traefik.enable: true
      traefik.frontend.rule: "PathPrefix:/tower;Host:<%= @config['app']['subdomain'] %>.<%= @config['app']['domain'] %>"
      traefik.port: 8080

